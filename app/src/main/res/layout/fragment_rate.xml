<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.tina.mr9.rate.RateViewModel" />

        <import type="com.tina.mr9.network.LoadApiStatus" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/layout_swipe_refresh_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_take_pic"
                    app:layout_constraintStart_toStartOf="@id/btn_take_pic"
                    app:layout_constraintTop_toTopOf="@id/btn_take_pic"
                    app:layout_constraintEnd_toEndOf="@id/btn_take_pic"
                    app:srcCompat="@drawable/photograph" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_add_photo"
                    app:layout_constraintStart_toStartOf="@id/btn_add_photo"
                    app:layout_constraintTop_toTopOf="@id/btn_add_photo"
                    app:layout_constraintEnd_toEndOf="@id/btn_add_photo"
                    app:srcCompat="@drawable/picture" />

                <Button
                    android:id="@+id/btn_add_photo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/background_add_photo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recycler_images"/>

                <Button
                    android:id="@+id/btn_take_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/background_add_photo"
                    app:layout_constraintStart_toEndOf="@id/btn_add_photo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recycler_images"/>

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:hint="Name of the drink"
                    android:text="@={viewModel.rating.name}"
                    android:background="@drawable/background_search"
                    android:paddingStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recycler_images"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <EditText
                    android:id="@+id/bar_input"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:hint="Where?"
                    android:background="@drawable/background_search"
                    android:text="@={viewModel.rating.bar}"
                    android:paddingStart="16dp"
                    app:layout_constraintStart_toStartOf="@id/name_input"
                    app:layout_constraintTop_toBottomOf="@id/name_input"
                    app:layout_constraintEnd_toEndOf="@id/name_input"/>

                <EditText
                    android:id="@+id/address_input"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:hint="Where?"
                    android:background="@drawable/background_search"
                    android:paddingStart="16dp"
                    app:layout_constraintStart_toStartOf="@id/name_input"
                    app:layout_constraintTop_toBottomOf="@id/bar_input"
                    app:layout_constraintEnd_toEndOf="@id/name_input"/>


                <Button
                    android:id="@+id/button_publish"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/com_facebook_blue"
                    android:clickable="@{viewModel.status == LoadApiStatus.LOADING ? false : true}"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_images"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="48dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >
                </androidx.recyclerview.widget.RecyclerView>


                <com.kaelli.niceratingbar.NiceRatingBar
                    android:id="@+id/niceRatingBar"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/address_input"
                    android:layout_marginStart="16dp"
                    app:nrb_rating="5"
                    app:nrb_ratingStatus="Enable"
                    app:nrb_starEmptyResource="@drawable/star_blank"
                    app:nrb_starFullResource="@drawable/star_full"
                    app:nrb_starHalfResource="@drawable/star_half"
                    app:nrb_starImageHeight="25dp"
                    app:nrb_starImagePadding="12dp"
                    app:nrb_starImageWidth="25dp" />

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/bubbleSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/niceRatingBar"
                    app:bsb_bubble_color="@color/color_red_light"
                    app:bsb_bubble_text_color="@color/white"
                    app:bsb_bubble_text_size="18sp"
                    app:bsb_max="10"
                    app:bsb_min="0"
                    app:bsb_second_track_color="@color/color_red"
                    app:bsb_section_count="5"
                    app:bsb_show_section_mark="true"
                    app:bsb_thumb_text_size="18sp"/>

                <TextView
                    android:id="@+id/demo_4_progress_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bubbleSeekBar"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/demo_4_progress_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/demo_4_progress_text_1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/demo_4_progress_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/demo_4_progress_text_2"
                    android:textSize="12sp"/>





            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ProgressTheme"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
