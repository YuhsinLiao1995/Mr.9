<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable name="search" type="com.tina.mr9.data.Search" />
        <variable name="itemPosition" type="Integer"/>
        <variable name="itemCount" type="Integer"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_home_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemCount="@{itemCount}"
        app:itemPosition="@{itemPosition}">

        <ImageView
            android:id="@+id/image_home_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{search.main_image}"
            android:background="@color/colorPrimary"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_home_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:letterSpacing="0.15"
            android:maxLines="1"
            android:textColor="@color/black_3f3a3a"
            android:textSize="15sp"
            android:text="@{search.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_home_main"
            tools:text="Uniqlo 特級超輕羽絨外套" />

        <TextView
            android:id="@+id/text_home_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:letterSpacing="0.15"
            android:maxLines="2"
            android:textColor="@color/gray_646464"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/text_home_title"
            app:layout_constraintStart_toStartOf="@+id/text_home_title"
            app:layout_constraintTop_toBottomOf="@+id/text_home_title"
            tools:text="How 哥推薦喔 Go Go" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
